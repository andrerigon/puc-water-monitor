<h1>Edit Account</h1>

<%= form_for @user, url: account_path, method: :put, html: { class: 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :phone_number, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :telegram_chat_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :telegram_chat_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Update', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= link_to 'Back', root_path, class: 'btn btn-secondary' %>