<h1>All Users</h1>

<%= link_to 'New User', new_admin_user_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone Number</th>
    <th>Admin</th>
    <th>Receive Updates</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.phone_number %></td>
      <td><%= user.admin? ? 'Yes' : 'No' %></td>
      <td><%= user.receive_updates? ? 'Yes' : 'No' %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
  </tbody>
</table>