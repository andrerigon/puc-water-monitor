<h1><%= t('users.index.title') %></h1>

<%= link_to t('users.index.new_user'), new_admin_user_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
  <tr>
    <th><%= t('users.index.name') %></th>
    <th><%= t('users.index.email') %></th>
    <th><%= t('users.index.phone_number') %></th>
    <th><%= t('users.index.admin') %></th>
    <th><%= t('users.index.receive_updates') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.phone_number %></td>
      <td><%= user.admin? ? 'Sim' : 'Não' %></td>
      <td><%= user.receive_updates? ? 'Sim' : 'Não' %></td>
      <td><%= link_to t('users.index.edit'), edit_admin_user_path(user), class: 'btn btn-warning' %></td>
      <td><%= link_to t('users.index.delete'), admin_user_path(user), method: :delete, data: { confirm: t('users.index.are_you_sure') }, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
  </tbody>
</table>